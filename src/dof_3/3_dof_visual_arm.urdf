<?xml version="1.0"?>
<robot name="3dof_arm">

  <!-- Materials -->
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="blue"><color rgba="0.0 0.0 1.0 1"/></material>
  <material name="orange"><color rgba="1.0 0.5 0.0 1"/></material>
  <material name="purple"><color rgba="0.8 0.2 0.8 1"/></material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.15 0.15 0.05"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>  <!-- sits flat on the ground -->
      <material name="gray"/>
    </visual>
    <collision>
      <geometry><box size="0.15 0.15 0.05"/></geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.025"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"/>
    </inertial>
  </link>

  <!-- Waist Link -->
  <link name="waist_link">
    <visual>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/> <!-- vertical cylinder centered along z -->
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0 0 0.04"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.04"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.002"/>
    </inertial>
  </link>

  <!-- Link 1 (Shoulder to Elbow) -->
  <link name="link_1">
    <visual>
      <geometry><cylinder radius="0.015" length="0.2"/></geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <material name="purple"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.015" length="0.2"/></geometry>
      <origin xyz="0 0 0.1"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.1"/>
      <inertia ixx="0.0005" iyy="0.0005" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Link 2 (Elbow to End Effector) -->
  <link name="link_2">
    <visual>
      <geometry><cylinder radius="0.012" length="0.15"/></geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.012" length="0.15"/></geometry>
      <origin xyz="0 0 0.075"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.0003" iyy="0.0003" izz="0.0003"/>
    </inertial>
  </link>

  <!-- End Effector Tip Link -->
  <link name="ee_tip">
    <visual>
      <geometry><sphere radius="0.005"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.001"/></geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Joints -->
  
  <!-- Joint 0: Waist (Z-axis rotation) -->
  <joint name="joint_waist" type="revolute">
    <parent link="base_link"/>
    <child link="waist_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- top of base box -->
    <axis xyz="0 0 1"/>                  <!-- rotate around Z -->
    <limit effort="10" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <!-- Joint 1: Shoulder (X-axis rotation) -->
  <joint name="joint_shoulder" type="revolute">
    <parent link="waist_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/> <!-- top of waist cylinder -->
    <axis xyz="1 0 0"/>                  <!-- rotate around X -->
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- Joint 2: Elbow (X-axis rotation, same as shoulder) -->
  <joint name="joint_elbow" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/> <!-- top of link_1 -->
    <axis xyz="1 0 0"/>                 <!-- rotate around X (same axis as shoulder) -->
    <limit effort="10" velocity="1.0" lower="-2.0" upper="2.0"/>
  </joint>

  <!-- Joint 3: Fixed joint to tip (0.075m from link_2 base) -->
  <joint name="joint_tip" type="fixed">
    <parent link="link_2"/>
    <child link="ee_tip"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>  <!-- At the tip of link_2 -->
  </joint>

</robot>